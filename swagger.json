  "paths": {
    "/users/authenticate": {
      "post": {
        "description": "Retreive user info  bearer token",
        "tags": [
          "auth"
        ],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "xaxi",
                  "password": "password"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "description": "Retrieve the full list of users",
        "tags": [
          "users"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Array",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/studies": {
      "get": {
        "description": "Retrieve the full list of studies",
        "tags": [
          "studies"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "bearerAuth": []
