        "id": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "integer"
        },
        "createdDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Study": {
      "type": "object",
      "required": [
        "id_estudio",
        "nombre",
        "fecha_insercion",
        "total",
        "finalizado_cerco",
        "progreso_cerco",
