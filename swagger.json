          "concentrators"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Array",
            "schema": {
              "$ref": "#/definitions/Concentrator"
            }
          }
        }
      }
    },
    "/packages": {
      "get": {
        "description": "Retrieve the full list of packages",
        "tags": [
          "packages"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Array",
